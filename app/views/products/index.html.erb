
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    
    <h1>Listing Products</h1>
    <%= link_to 'New Product', new_product_path, :class => "btn btn-primary" %>

<table>
  <thead>
    <tr>
    <th>ID</th>
      <th class="tableThName">Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each  do |product| %>
      <tr>
       <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td> <%= @categories.find(product.category_id).name %></td>
        <td><%= product.info %></td>
       

        <td><%= link_to 'Show', product, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product),:class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>


