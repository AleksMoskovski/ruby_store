
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    
    <h1>Listing Products</h1>
    <%= link_to 'New Product', new_product_path, :class => "btn btn-primary" %>

<table>
  <thead>
    <tr>
    <th>ID</th>
      <th class="tableThName"><%= link_to 'Name',:sort => 'name' %></th>
      <th><%= link_to 'Price',:sort => 'price'%></th>
      <th><%= link_to 'Category',:sort => 'category_id'%></th>
      <th>Info</th>
      <th><%= link_to 'Created at',:sort => 'created_at'%></th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each  do |product| %>
      <tr>
       <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= sprintf("$%0.02f", product.price) %></td>
        <td> <%= @categories.find(product.category_id).name %></td>
        <td><%# product.amount %></td>
        <td><%= product.info %></td>
        <td><%= time_ago_in_words(product.created_at) %></td>
       
        <td><%# button_to 'Add', carts_path(:product_id => product.id), :class => "btn btn-info" %>
          <%# button_to 'Add',:action => :create,
                              :controler => :carts,
                              :id => product.id
                              #:class => "btn btn-info"
                               %>
                               <a href="/carts/id=<%= product.id %>"> Add</a>
        </td>
        <td><%= link_to 'Show', product, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product),:class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>


